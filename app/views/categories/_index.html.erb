
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Created At</th>
            <th scope="col">Edit</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category&.name %></td>
              <td><%= category&.created_at.strftime('%Y-%m-%d') %></td>
              <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-outline-primary btn-sm' %></td>
              <td>
               <div class="dropdown">
                <button class="btn btn-link text-dark p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="bi bi-three-dots"></i>
                </button>
                <ul class="dropdown-menu">
                 <li>
                  <%= button_to category_path(category), method: :delete, data: { confirm: "Are you sure?" }, form: { style: "display:inline;" }, class: "dropdown-item text-black px-3 py-1 text-center", style: "font-size: 0.85rem; width: 100px;" do %>
                    Delete
                  <% end %>
                 </li>
                </ul>
               </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mt-3 d-flex justify-content-end">
        <%= paginate @categories %>
      </div>