<div class="container-fluid p-0">
  <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4" style="background-image: url('<%= asset_path('background.png') %>'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
          <div class="card mb-3">
            <div class="card-body">

              <div class="pt-4 pb-2">
                <h5 class="card-title text-center pb-0 fs-4">Forgot your password?</h5>
              </div>

              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "row g-3 needs-validation", novalidate: true }) do |f| %>
                <div class="col-12">
                  <label for="yourEmail" class="form-label">Email</label>
                    <div class="input-group has-validation">
                      <%= f.email_field :email, class: "form-control", id: "yourEmail", required: true %>
                      <div class="invalid-feedback">Please enter a valid Email adddress!</div>
                    </div>
                </div>

                  <div class="col-12">
                    <button class="btn btn-primary w-100" type="submit">Send</button>
                  </div>
                  <div class="col-12">
                    <p class="small mb-0">Already have an account? <a href="/users/sign_in">Log in</a></p>
                  </div>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </section>
</div>