
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
            <tr style="cursor: pointer;" onclick="window.location='<%= client_path(client) %>'">
              <td><%= client&.name %></td>
              <td><%= client&.email %></td>
              <td><%= client&.phone %></td>
              <td><%= client&.created_at.strftime('%Y-%m-%d') %></td>
              <td onclick="event.stopPropagation();" class="position-relative">
               <div class="dropdown">
                <button class="btn btn-link text-dark p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="bi bi-three-dots"></i>
                </button>
                <ul class="dropdown-menu">
                 <li>
                  <%= button_to client_path(client), method: :delete, data: { confirm: "Are you sure?" }, form: { style: "display:inline;" }, class: "dropdown-item text-black px-3 py-1 text-center", style: "font-size: 0.85rem; width: 100px;" do %>
                    Delete
                  <% end %>
                 </li>
                </ul>
               </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mt-3 d-flex justify-content-end">
        <%= paginate @clients %>
      </div>