<main id="main" class="main">
  <section class="section">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title fw-bold">Clients</h5>
         <div class="d-flex justify-content-end mb-4">
           <%= link_to 'New Client', new_client_path, class: 'btn btn-primary' %>
         </div>
         <div class="d-flex justify-content-between mb-4">
          <%= search_form_for @q, url: clients_path, method: :get, class: "d-flex", data: { controller: "search" } do  |f| %>
            <%= f.search_field :name_or_email_or_phone_cont, placeholder: "Search...", class: "form-control me-2", data: { action: "input->search#search" } %>
          <% end %>
          <div class="btn-group">
           <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Export</button>
            <ul class="dropdown-menu">
             <li><%= link_to "CSV", clients_path(format: :csv), class: "dropdown-item" %></li>
             <li><%= link_to "XLSX", clients_path(format: :xlsx), class: "dropdown-item" %></li>
            </ul>
          </div>
         </div>
         <%= render "clients/index" %>
      </div> 
    </div>
  </section>
</main>