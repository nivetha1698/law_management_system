<main id="main" class="main">
 <%= render 'shared/flash' %>
  <section class="section">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title fw-bold">Judges</h5>
         <div class="d-flex justify-content-end mb-4">
           <%= link_to 'New Judge', new_judge_path, class: 'btn btn-primary' %>
         </div>
         <div class="mb-4">
          <%= form_with url: judges_path, method: :get, data: { controller: "search", turbo_frame: "_top" } do %>
            <div class="d-flex flex-wrap gap-2 mb-4">
               
            </div>

            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
              <%= search_field_tag :query, params[:query], placeholder: "Search...", class: "form-control", style: "width: 220px;", data: { action: "input->search#search" } %>
            </div>
         <% end %>
        </div>
         <%= render "judges/index" %>
      </div> 
    </div>
  </section>
</main>
