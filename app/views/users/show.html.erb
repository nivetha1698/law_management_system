<main id="main" class="main">
  <div class="pagetitle">
    <h1>Profile</h1>
  </div>
  <section class="section profile">
    <div class="row">
      <div class="col-xl-4">
       <div class="card">
        <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
          <%= image_tag current_user.profile_image, alt: "Profile", class: "rounded-circle" %>
          <h2><%= current_user.name %></h2>
          <h3><%= current_user.roles.first.name&.humanize %></h3>
        </div>
      </div>
    </div>
    <div class="col-xl-8">
      <div class="card">
        <div class="card-body pt-4">
          <ul class="nav nav-tabs nav-tabs-bordered">
            <li class="nav-item">
              <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
            </li>
            <li class="nav-item">
              <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
            </li>
          </ul>
          <div class="tab-content pt-2">
            <div class="tab-pane fade show active profile-overview" id="profile-overview">
              <h5 class="card-title">Profile Details</h5>
                <div class="row">
                  <div class="col-lg-3 col-md-4 label ">Name</div>
                  <div class="col-lg-9 col-md-8"><%= current_user.name %></div>
                </div>

                <div class="row">
                  <div class="col-lg-3 col-md-4 label">Gender</div>
                  <div class="col-lg-9 col-md-8"><%= current_user.gender&.humanize %></div>
                </div>

                <div class="row">
                  <div class="col-lg-3 col-md-4 label">Role</div>
                  <div class="col-lg-9 col-md-8"><%= current_user.roles.first.name&.humanize %></div>
                </div>

                <div class="row">
                  <div class="col-lg-3 col-md-4 label">Country</div>
                  <div class="col-lg-9 col-md-8"><%= current_user.country&.name %></div>
                </div>

                <div class="row">
                  <div class="col-lg-3 col-md-4 label">Address</div>
                  <div class="col-lg-9 col-md-8"><%= current_user.address %></div>
                </div>

                <div class="row">
                  <div class="col-lg-3 col-md-4 label">Phone</div>
                  <div class="col-lg-9 col-md-8"><%= current_user.phone %></div>
                </div>

                <div class="row">
                  <div class="col-lg-3 col-md-4 label">Email</div>
                  <div class="col-lg-9 col-md-8"><%= current_user.email %></div>
                </div>
            </div>
            <%= render "users/edit" %>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
